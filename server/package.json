{
  "name": "unified-business-platform",
  "version": "1.0.0",
  "description": "Enterprise-level unified business platform with progressive feature disclosure",
  "private": true,
  "main": "dist/main.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docker:build": "docker build -t unified-business-platform .",
    "docker:run": "docker-compose up -d",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:stop": "docker-compose down",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio",
    "prepare": "husky"
  },
  "dependencies": {
    "@apollo/server": "5.3.0",
    "@aws-sdk/client-s3": "3.968.0",
    "@aws-sdk/lib-storage": "3.968.0",
    "@graphql-tools/utils": "11.0.0",
    "@nestjs/apollo": "13.2.3",
    "@nestjs/axios": "4.0.1",
    "@nestjs/bull": "11.0.4",
    "@nestjs/cache-manager": "3.1.0",
    "@nestjs/common": "11.1.11",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "11.1.11",
    "@nestjs/event-emitter": "3.0.1",
    "@nestjs/graphql": "13.2.3",
    "@nestjs/jwt": "11.0.2",
    "@nestjs/passport": "11.0.5",
    "@nestjs/platform-express": "11.1.11",
    "@nestjs/platform-socket.io": "11.1.11",
    "@nestjs/schedule": "6.1.0",
    "@nestjs/swagger": "11.2.4",
    "@nestjs/terminus": "11.0.0",
    "@nestjs/websockets": "11.1.11",
    "bcryptjs": "2.4.3",
    "bull": "4.16.5",
    "cache-manager-redis-yet": "5.1.5",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.3",
    "dataloader": "2.2.3",
    "dotenv": "16.4.5",
    "drizzle-orm": "0.45.1",
    "graphql": "16.8.1",
    "graphql-query-complexity": "1.1.0",
    "graphql-redis-subscriptions": "2.7.0",
    "graphql-scalars": "1.25.0",
    "graphql-subscriptions": "3.0.0",
    "graphql-type-json": "0.3.2",
    "ioredis": "5.4.1",
    "joi": "17.12.0",
    "nodemailer": "6.9.11",
    "passport": "0.7.0",
    "passport-facebook": "3.0.0",
    "passport-github2": "0.1.12",
    "passport-google-oauth20": "2.0.0",
    "passport-jwt": "4.0.1",
    "passport-local": "1.0.0",
    "pg": "8.11.5",
    "qrcode": "1.5.4",
    "redis": "4.6.13",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.1",
    "speakeasy": "2.0.0",
    "uuid": "9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "11.0.14",
    "@nestjs/schematics": "11.0.9",
    "@nestjs/testing": "11.1.11",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.12",
    "@types/node": "20.11.30",
    "@types/passport-facebook": "3.0.12",
    "@types/passport-github2": "1.2.9",
    "@types/passport-google-oauth20": "2.0.14",
    "@types/passport-jwt": "4.0.1",
    "@types/passport-local": "1.0.38",
    "@types/pg": "8.11.10",
    "@types/qrcode": "1.5.6",
    "@types/speakeasy": "2.0.10",
    "@types/supertest": "6.0.3",
    "@types/uuid": "9.0.8",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "drizzle-kit": "0.31.8",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "lint-staged": "15.2.0",
    "prettier": "3.3.3",
    "supertest": "7.0.0",
    "ts-jest": "29.2.5",
    "ts-node": "10.9.2",
    "typescript": "5.4.5"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
