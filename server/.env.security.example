# üîí ENTERPRISE SECURITY MODULE CONFIGURATION
# Copy this to your .env file and configure according to your needs

# ============================================================================
# üîê ENCRYPTION CONFIGURATION (REQUIRED)
# ============================================================================

# Master encryption key (REQUIRED) - Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_MASTER_KEY=your_32_byte_hex_key_here_replace_this_with_actual_key

# Encryption algorithm (default: aes-256-gcm)
ENCRYPTION_ALGORITHM=aes-256-gcm

# BCrypt rounds for password hashing (default: 12)
BCRYPT_ROUNDS=12

# ============================================================================
# üìù AUDIT CONFIGURATION
# ============================================================================

# Audit log retention in days (default: 2555 = 7 years)
AUDIT_RETENTION_DAYS=2555

# Enable audit log encryption (default: true)
AUDIT_ENCRYPTION_ENABLED=true

# Enable audit integrity checks (default: true)
AUDIT_INTEGRITY_CHECKS=true

# ============================================================================
# üö® THREAT DETECTION CONFIGURATION
# ============================================================================

# Enable threat detection (default: true)
THREAT_DETECTION_ENABLED=true

# Threat analysis confidence threshold (0-100, default: 70)
THREAT_ANALYSIS_THRESHOLD=70

# Enable behavioral analysis (default: true)
BEHAVIORAL_ANALYSIS_ENABLED=true

# Enable threat intelligence (default: true)
THREAT_INTELLIGENCE_ENABLED=true

# ============================================================================
# üìã COMPLIANCE CONFIGURATION
# ============================================================================

# Compliance frameworks to enable (comma-separated)
COMPLIANCE_FRAMEWORKS=SOC2,GDPR,PCI_DSS,HIPAA

# Enable automated compliance checks (default: true)
COMPLIANCE_AUTOMATED_CHECKS=true

# Enable compliance reporting (default: true)
COMPLIANCE_REPORTING_ENABLED=true

# Enable GDPR features (default: true)
GDPR_ENABLED=true

# ============================================================================
# üîç SECURITY MONITORING
# ============================================================================

# Enable security monitoring (default: true)
SECURITY_MONITORING_ENABLED=true

# Enable real-time alerts (default: true)
REAL_TIME_ALERTS_ENABLED=true

# Enable security dashboard (default: true)
SECURITY_DASHBOARD_ENABLED=true

# ============================================================================
# üè¢ ENTERPRISE AUTHENTICATION
# ============================================================================

# Enable SAML authentication (default: false)
SAML_ENABLED=false

# Enable LDAP authentication (default: false)
LDAP_ENABLED=false

# Enable OAuth2 provider (default: false)
OAUTH2_ENABLED=false

# SSO session timeout in seconds (default: 28800 = 8 hours)
SSO_SESSION_TIMEOUT=28800

# ============================================================================
# üß™ PENETRATION TESTING
# ============================================================================

# Enable penetration testing (default: true)
PENETRATION_TESTING_ENABLED=true

# Enable automated security scanning (default: false - enable in production)
AUTOMATED_SCANNING_ENABLED=false

# Enable vulnerability reporting (default: true)
VULNERABILITY_REPORTING_ENABLED=true

# ============================================================================
# üóëÔ∏è DATA MANAGEMENT
# ============================================================================

# Enable data retention policies (default: true)
DATA_RETENTION_ENABLED=true

# Enable GDPR deletion (default: true)
GDPR_DELETION_ENABLED=true

# Enable emergency data wipe (default: false - high security environments only)
EMERGENCY_WIPE_ENABLED=false

# ============================================================================
# üö¶ RATE LIMITING
# ============================================================================

# Enable security rate limiting (default: true)
RATE_LIMIT_ENABLED=true

# Rate limit requests per minute (default: 100)
RATE_LIMIT_REQUESTS=100

# Rate limit window in milliseconds (default: 60000 = 1 minute)
RATE_LIMIT_WINDOW=60000

# ============================================================================
# üõ°Ô∏è SECURITY HEADERS
# ============================================================================

# Enable security headers (default: true)
SECURITY_HEADERS_ENABLED=true

# Content Security Policy (customize as needed)
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' ws: wss:

# ============================================================================
# üéØ ADVANCED FEATURES
# ============================================================================

# Enable anomaly detection (default: true)
ANOMALY_DETECTION_ENABLED=true

# Enable risk-based authentication (default: false - advanced feature)
RISK_BASED_AUTH_ENABLED=false

# Enable geo-fencing (default: false - requires geo IP service)
GEO_FENCING_ENABLED=false

# ============================================================================
# üìß NOTIFICATION CONFIGURATION
# ============================================================================

# Security alert email recipients (comma-separated)
SECURITY_ALERT_EMAILS=admin@yourcompany.com,security@yourcompany.com

# Enable email notifications for security events (default: true)
SECURITY_EMAIL_NOTIFICATIONS=true

# Enable SMS notifications for critical security events (default: false)
SECURITY_SMS_NOTIFICATIONS=false

# ============================================================================
# üîó INTEGRATION CONFIGURATION
# ============================================================================

# Redis URL for caching and pub/sub (if different from main Redis)
SECURITY_REDIS_URL=redis://localhost:6379

# External threat intelligence API key (optional)
THREAT_INTELLIGENCE_API_KEY=

# Webhook URL for security alerts (optional)
SECURITY_WEBHOOK_URL=

# ============================================================================
# üèóÔ∏è DEVELOPMENT/TESTING CONFIGURATION
# ============================================================================

# Enable security module debug logging (default: false)
SECURITY_DEBUG_LOGGING=false

# Skip security checks in development (default: false - NOT RECOMMENDED)
SECURITY_SKIP_CHECKS=false

# Mock external services in development (default: true)
SECURITY_MOCK_EXTERNAL_SERVICES=true

# ============================================================================
# üìä PERFORMANCE CONFIGURATION
# ============================================================================

# Maximum concurrent threat analyses (default: 10)
MAX_CONCURRENT_THREAT_ANALYSES=10

# Cache TTL for security data in seconds (default: 300 = 5 minutes)
SECURITY_CACHE_TTL=300

# Maximum audit log batch size (default: 1000)
AUDIT_LOG_BATCH_SIZE=1000

# ============================================================================
# üîí PRODUCTION SECURITY HARDENING
# ============================================================================

# Force HTTPS in production (default: true in production)
FORCE_HTTPS=true

# Enable HSTS (HTTP Strict Transport Security) (default: true in production)
ENABLE_HSTS=true

# Enable certificate pinning (default: false - advanced feature)
ENABLE_CERT_PINNING=false

# Maximum failed login attempts before lockout (default: 5)
MAX_FAILED_LOGIN_ATTEMPTS=5

# Account lockout duration in minutes (default: 30)
ACCOUNT_LOCKOUT_DURATION=30