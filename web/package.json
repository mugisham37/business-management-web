{
  "name": "nextjs-graphql-foundation",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "node scripts/build-check.js && npm run validate:graphql && next build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:property": "jest --testPathPattern=__property_tests__",
    "codegen": "graphql-codegen --config codegen.ts",
    "codegen:watch": "graphql-codegen --config codegen.ts --watch",
    "validate:graphql": "node scripts/validate-graphql.js",
    "validate:schema": "npm run codegen && npm run validate:graphql",
    "prepare": "husky install",
    "build:analyze": "ANALYZE=true npm run build",
    "validate": "npm run type-check && npm run lint:check && npm run format:check && npm run validate:graphql && npm run test",
    "clean": "rm -rf .next out dist",
    "postinstall": "npm run codegen || true"
  },
  "dependencies": {
    "@apollo/client": "^3.8.8",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "graphql": "^16.8.1",
    "graphql-ws": "^5.14.2",
    "isomorphic-dompurify": "^2.35.0",
    "jose": "^5.1.3",
    "next": "16.1.2",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "ws": "^8.14.2",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/introspection": "^4.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@graphql-codegen/typescript-react-apollo": "^4.1.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/ws": "^8.5.10",
    "eslint": "^9",
    "eslint-config-next": "16.1.2",
    "fast-check": "^3.15.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "tailwindcss": "^4",
    "typescript": "^5",
    "webpack-bundle-analyzer": "^4.10.1",
    "whatwg-fetch": "^3.6.20"
  }
}
